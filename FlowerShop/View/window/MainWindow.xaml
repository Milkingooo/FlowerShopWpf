<Window x:Class="FlowerShop.View.window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowerShop.View.window"
        mc:Ignorable="d"
        Icon="/Assets/Images/icon.png"
        Background="AliceBlue"
        Title="Главная" MinHeight="450" 
        MinWidth="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Стиль кнопок в ToolBar -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D3D3D3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel>
            <ToolBar Height="40" VerticalAlignment="Top" Background="AliceBlue">
                <!-- Добавить -->
                <Button Name="addButton" Click="addButton_Click" Style="{StaticResource ToolbarButtonStyle}">
                    <Image Source="/Assets/Images/add.png" Width="24" Height="24"/>
                    <Button.ToolTip>
                        <ToolTip Content="Добавить элемент"/>
                    </Button.ToolTip>
                </Button>
                <Separator/>

                <!-- Удалить -->
                <Button Name="deleteButton" Click="deleteButton_Click" Style="{StaticResource ToolbarButtonStyle}">
                    <Image Source="/Assets/Images/delete.png" Width="24" Height="24"/>
                    <Button.ToolTip>
                        <ToolTip Content="Удалить элемент"/>
                    </Button.ToolTip>
                </Button>
                <Separator/>

                <!-- Редактировать -->
                <Button Click="Button_Click" Style="{StaticResource ToolbarButtonStyle}">
                    <Image Source="/Assets/Images/edit.png" Width="24" Height="24"/>
                    <Button.ToolTip>
                        <ToolTip Content="Редактировать элемент"/>
                    </Button.ToolTip>
                </Button>
                <Separator/>

                <!-- Обновить -->
                <Button Name="getButton" Click="getButton_Click" Style="{StaticResource ToolbarButtonStyle}">
                    <Image Source="/Assets/Images/reload.png" Width="24" Height="24"/>
                    <Button.ToolTip>
                        <ToolTip Content="Обновить данные"/>
                    </Button.ToolTip>
                </Button>
                <Separator/>

                <!-- Помощь -->
                <Button Name="helpButton" Click="helpButton_Click" Style="{StaticResource ToolbarButtonStyle}">
                    <Image Source="/Assets/Images/help.png" Width="24" Height="24"/>
                    <Button.ToolTip>
                        <ToolTip Content="Открыть справку"/>
                    </Button.ToolTip>
                </Button>
                <Separator/>

                <!-- Прогресс выполнения -->
                <ProgressBar Width="120" Height="18" VerticalAlignment="Center"
                 Minimum="0" Maximum="7" Value="{Binding Count}" 
                 Margin="5" Foreground="#4CAF50" Background="#DDD"/>

                <!-- Индикатор загрузки -->
                <TextBlock x:Name="LoadGif"
               Text="Загрузка..."
               FontFamily="Bahnschrift"
               FontSize="14"
               FontWeight="Bold"
               Foreground="#FF5722"
               TextAlignment="Center"
               VerticalAlignment="Center"
               Visibility="Collapsed"/>
            </ToolBar>

            <TabControl
                Name="TabControl2"
                FontFamily="Bahnschrift SemiLight SemiCondensed"
                FontSize="14">
                <TabItem
                    Header="Товар" >
                    <TabItem.Content>
                        <DataGrid
                            FontFamily="Bahnschrift SemiLight SemiCondensed"
                         IsReadOnly="True"
                         SelectedItem="{Binding SelectedObject}"
                         AutoGenerateColumns="False"
                         ItemsSource="{Binding Goods}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                                <DataGridTextColumn
                         Header="Название"
                         Binding="{Binding Path=Name}">

                                </DataGridTextColumn>
                                <DataGridTextColumn
                         Header="Цена"
                         Binding="{Binding Path=Price}">

                                </DataGridTextColumn>
                                <DataGridTextColumn
                         Header="Количество"
                         Binding="{Binding Path=Quantity}">
                                </DataGridTextColumn>
                                <DataGridTextColumn
                         Header="ID категории"
                         Binding="{Binding Path=Category.Name}">
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem.Content>
                </TabItem>
                <TabItem Header="Поставка">
                    <DataGrid
                        FontFamily="Bahnschrift SemiLight SemiCondensed"
                        IsReadOnly="True"
                        SelectedItem="{Binding SelectedObject}"
                        Grid.Row="0"
                        AutoGenerateColumns="False"
                        ItemsSource="{Binding Supplies}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                            <DataGridTextColumn
                        Header="ID поставщика"
                        Binding="{Binding Path=IdProvider}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
                        Header="ID товара"
                        Binding="{Binding Path=IdGood}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
                        Header="Количество"
                        Binding="{Binding Path=Quantity}">
                            </DataGridTextColumn>
                            <DataGridTextColumn
                        Header="Дата поставки"
                        Binding="{Binding Path=DateSupply}">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Поставщик">
                    <DataGrid
        IsReadOnly="True"
        SelectedItem="{Binding SelectedObject}"
        Grid.Row="0"
        AutoGenerateColumns="False"
        ItemsSource="{Binding Providers}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                            <DataGridTextColumn
        Header="Название поставщика"
        Binding="{Binding Path=Name}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
        Header="ID города"
        Binding="{Binding Path=IdCity}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
        Header="Телефон"
        Binding="{Binding Path=Phone}">
                            </DataGridTextColumn>
                            <DataGridTextColumn
        Header="Почта"
        Binding="{Binding Path=Email}">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Заказ">
                    <DataGrid
IsReadOnly="True"
SelectedItem="{Binding SelectedObject}"
Grid.Row="0"
AutoGenerateColumns="False"
ItemsSource="{Binding Orders}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                            <DataGridTextColumn
Header="ID клиента"
Binding="{Binding Path=IdCustomer}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
Header="Итоговая цена"
Binding="{Binding Path=TotalPrice}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
Header="Дата заказа"
Binding="{Binding Path=OrderDate}">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Детали заказа">
                    <DataGrid
IsReadOnly="True"
SelectedItem="{Binding SelectedObject}"
Grid.Row="0"
AutoGenerateColumns="False"
ItemsSource="{Binding OrderDetails}">

                        <DataGrid.Columns>

                            <DataGridTextColumn
Header="ID заказа"
Binding="{Binding Path=IdOrder}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
Header="ID товара"
Binding="{Binding Path=IdGood}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
Header="Количество"
Binding="{Binding Path=Quantity}">
                            </DataGridTextColumn>
                            <DataGridTextColumn
Header="Цена"
Binding="{Binding Path=Price}">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <TabItem Header="Клиент">
                    <DataGrid
IsReadOnly="True"
SelectedItem="{Binding SelectedObject}"
Grid.Row="0"
AutoGenerateColumns="False"
ItemsSource="{Binding Customers}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                            <DataGridTextColumn
Header="Имя"
Binding="{Binding Path=Name}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
Header="Телефон"
Binding="{Binding Path=Phone}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
Header="Почта"
Binding="{Binding Path=Email}">
                            </DataGridTextColumn>
                            <DataGridTextColumn
Header="Пароль"
Binding="{Binding Path=Password}">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <TabItem Header="Город">
                    <DataGrid
IsReadOnly="True"
SelectedItem="{Binding SelectedObject}"
Grid.Row="0"
AutoGenerateColumns="False"
ItemsSource="{Binding Cities}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Path=Name}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Категории">
                    <DataGrid
IsReadOnly="True"
SelectedItem="{Binding SelectedObject}"
Grid.Row="0"
AutoGenerateColumns="False"
ItemsSource="{Binding Categories}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                            <DataGridTextColumn
Header="Название"
Binding="{Binding Path=Name}">

                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="ЛогПоставки">
                    <DataGrid
IsReadOnly="True"
Grid.Row="0"
AutoGenerateColumns="False"
ItemsSource="{Binding SupplyLogs}">

                        <DataGrid.Columns>
                            <DataGridTextColumn
Header="ID поставки"
Binding="{Binding Path=IdSupply}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
Header="Содержание"
Binding="{Binding Path=LogMessage}">

                            </DataGridTextColumn>
                            <DataGridTextColumn
Header="Дата лога"
Binding="{Binding Path=LogDate}">

                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>
