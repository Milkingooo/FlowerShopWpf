<Window x:Class="FlowerShop.View.window.AddOrEditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowerShop.View.window"
        mc:Ignorable="d"
                Title="Управление категориями" MinHeight="200" MinWidth="350" Height="200" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox Header="Добавление/изменение категориям" Padding="5" Width="210" Height="120" HorizontalAlignment="Center" Margin="10">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <Label Content="Название категории" Height="25" Width="180"/>
                <TextBox Text="{Binding NewCategory.Name}" Height="20" Width="150" Margin="5"/>
                <Button
    Name="saveButton"
    Content="Сохранить"
    Grid.Row="4"
    Click="saveButton_Click"
    Margin="5" Height="20" Width="150"></Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
