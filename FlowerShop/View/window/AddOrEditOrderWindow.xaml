<Window x:Class="FlowerShop.View.window.AddOrEditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowerShop.View.window"
        mc:Ignorable="d"
            Title="Управление заказами" MinHeight="400" MinWidth="350" Height="400" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox Header="Добавление/изменение заказа" Padding="5" Width="210" Height="300" HorizontalAlignment="Center" Margin="10">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <Label Content="ID клиента" Height="25" Width="180"/>
                <TextBox Text="{Binding NewOrder.IdCustomer}" Height="20" Width="150" Margin="5"/>

                <Label Content="Итоговая цена" Height="25" Width="180"/>
                <TextBox Text="{Binding NewOrder.TotalPrice}" Height="20" Width="150" Margin="5"/>

                <Label Content="Дата заказа" Height="25" Width="180"/>
                <DatePicker 
                SelectedDateFormat="Short" 
                SelectedDate="{Binding NewOrder.OrderDate}"
                Margin="5"/>
                <Button
        Name="saveButton"
        Content="Сохранить"
        Grid.Row="4"
        Click="saveButton_Click"
        Margin="5" Height="20" Width="150"></Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
