<Window x:Class="FlowerShop.View.window.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowerShop.View.window"
        mc:Ignorable="d"
        Title="AddCustomerWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox
            Text="{Binding NewCustomer.Name}"
            Grid.Row="0"
            >

        </TextBox>
        <TextBox
            Text="{Binding NewCustomer.Phone}"
            Grid.Row="1">

        </TextBox>
        <TextBox
            Text="{Binding NewCustomer.Email}"
            Grid.Row="2">

        </TextBox>

        <Button
            Name="saveButton"
            Content="Сохранить"
            Grid.Row="3"
            Click="saveButton_Click"></Button>

    </Grid>
</Window>
